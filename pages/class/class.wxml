			<view class="medium-text">《毕业设计进展汇报》</view>
		</navigator>
		<navigator url="/pages/editMaterials/editMaterials">
			<view class="medium-text">《返校问题》</view>
		</navigator>
	</view>

	<view class="top-icon">
		<view class="icon message"></view>
		<text class="text">留言板</text>
