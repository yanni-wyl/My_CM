page {
  height: 100%;
}
.map-container{
  height: 82%;
  width:100%;
  background-color: rgb(233, 213, 223);
}
.map{
  width: 100%;
  height: 100%;
}

.btns {
  width: 100%;
  height: 18%;
  margin-left: 6rpx;
  display: flex;
  position: absolute;
  flex-direction: row;
  flex-wrap: wrap;
  flex-grow: 1;
  color: white;
  line-height: 110rpx;
}

.btn {
  width: 49%;
  height: 49%;
  align-items: center;/*垂直居中*/
  justify-content: center;/*水平居中*/
  text-align: center;
  border: 1rpx solid white;
    /* background-color: rgb(192, 147, 49); */
  background-color: #13227a;
  border-radius: 10%;

}
