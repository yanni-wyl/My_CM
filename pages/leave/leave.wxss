/* pages/leave/leave.wxss */
page {
  height: 100%;
  width: 100%;
}

.main-container {
  padding-top: 5%;
}

.leave-page {
  display: flex;
  justify-content: center;
}

.leave-reason {
  width: 80%;
  border: 3rpx solid black;
  margin: 2% 10% 0 10%;
  padding-left: 2%;
  padding-top: 2%;
}

.leave-stu {
  display: flex;
  flex-direction: row-reverse;
}

.stu-name {
  margin-right: 2%;
  width: 30%;
}

.top-button {
  background-color: #ecaf2c;
  color: #fff;
  width: 50%;
  margin: 5% 0 0 25%;
  line-height: 40px;
  border-radius: 8px;
  text-align: center;
}

.stu-date {
  display: flex;
  flex-direction: row-reverse;
  margin-right: 200rpx;
  /* width: 30%; */
}
.success{
  margin-left: 10%;
  background-color: #fff;
  height: 200px;
  text-align: center;
}

.congratulation{
  line-height: 120px;
}

.icon-success{
  margin-right: 10px;
}
.back-home{
  margin: 0 40px;
}