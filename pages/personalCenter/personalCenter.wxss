page {
  height: 100%;
  width: 100%
}

.top {
  height: 24%;
  border-bottom: 1px solid #ddd;
}

.userInfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 22rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.settings {
  height: 80%;
}

.middle {
  display: flex;
  border-bottom: 1px solid #ddd;
  font-size: 32rpx;
  padding-left: 10%;
  padding-bottom: 2%;
  padding-top: 2%;
  line-height: 60rpx;
}

.icon {
  width: 36rpx;
  height: 36rpx;
  background-size: 36rpx 36rpx;
  margin-top: 10rpx;
  /* margin-left: 22rpx; */
  margin-right: 24rpx;
  display: inline-block;
}

